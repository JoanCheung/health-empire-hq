/* Quiz Page Styles */
page {
  background: #f8f9fa;
  min-height: 100vh;
}

.quiz-container {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e3e3e3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  display: block;
}

/* Progress Header */
.progress-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  display: block;
  text-align: center;
}

/* Step Container */
.step-container {
  animation: slideIn 0.3s ease-in-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.step-header {
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.step-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* Form Section */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #333;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.radio-group {
  display: flex;
  gap: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  font-size: 28rpx;
  color: #333;
}

/* Questions Section */
.questions-section {
  margin-bottom: 20rpx;
}

.question-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.question-category {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.question-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 25rpx;
  line-height: 1.4;
}

.options-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.option-item:hover {
  border-color: #667eea;
  background: #f8f9ff;
}

.option-label {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* Checkbox specific styles */
.checkbox-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.checkbox-item:hover {
  border-color: #667eea;
  background: #f8f9ff;
}

.checkbox-item:last-child {
  margin-bottom: 0;
}

/* Photo Section */
.photo-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 40rpx 0 20rpx 0;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.photo-placeholder {
  padding: 60rpx 0;
}

.camera-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.photo-tip {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.photo-preview {
  position: relative;
}

.preview-image {
  width: 100%;
  max-width: 400rpx;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.photo-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

/* AI Questions */
.ai-questions-container {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.ai-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.ai-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.ai-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.ai-progress {
  font-size: 24rpx;
  opacity: 0.8;
}

.ai-question-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.ai-option {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.ai-option:hover {
  border-color: #667eea;
  background: #f8f9ff;
}

.option-text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  flex: 1;
}

.ai-question-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 40rpx;
}

.ai-completed {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.completion-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.completion-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 50rpx;
  line-height: 1.5;
}

/* Buttons */
.step-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn-primary {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

.btn-primary:disabled {
  background: #ccc;
  transform: none;
}

.btn-secondary {
  flex: 1;
  height: 88rpx;
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: #f8f9ff;
  transform: translateY(2rpx);
}

.btn-outline {
  flex: 1;
  height: 88rpx;
  background: transparent;
  color: #999;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-camera {
  width: 300rpx;
  height: 80rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-camera:active {
  background: #5a6fd8;
}

.small {
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
}

.large {
  width: 400rpx;
  height: 100rpx;
  font-size: 36rpx;
  margin: 0 auto;
}

/* Responsive Design */
@media screen and (max-width: 750px) {
  .step-buttons {
    flex-direction: column;
  }
  
  .btn-primary,
  .btn-secondary,
  .btn-outline {
    flex: none;
    margin-bottom: 15rpx;
  }
  
  .ai-question-buttons {
    flex-direction: column;
  }
}