.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #1BB394, #16a085);
  padding: 40rpx 20rpx;
  border-radius: 15rpx;
  color: white;
}

.ai-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.questions-section {
  margin-bottom: 40rpx;
}

.question-card {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-number {
  color: #1BB394;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-transform: uppercase;
}

.question-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 25rpx;
  line-height: 1.5;
  font-weight: 500;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s;
}

.option-item:hover {
  background-color: #f8f9fa;
}

.option-item radio {
  margin-right: 15rpx;
}

.option-item text {
  font-size: 30rpx;
  color: #555;
}

.progress-info {
  text-align: center;
  margin-bottom: 30rpx;
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
}

.progress-info text {
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.skip-btn {
  flex: 1;
  background: #ddd;
  color: #666;
  border: none;
  border-radius: 10rpx;
  height: 80rpx;
  font-size: 30rpx;
}

.submit-btn {
  flex: 2;
  background: #1BB394;
  color: white;
  border: none;
  border-radius: 10rpx;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
}

.submit-btn:not([disabled]):active {
  background: #16a085;
}

/* 加载样式 */
.loading-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 40rpx;
  border-radius: 15rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1BB394;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}