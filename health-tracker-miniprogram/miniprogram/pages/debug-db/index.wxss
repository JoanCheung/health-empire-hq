.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.loading-section {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

/* 统计区域 */
.stats-section, .api-stats-section, .dates-section, .records-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1BB394;
}

/* API统计 */
.api-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.api-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.api-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.api-count {
  font-size: 24rpx;
  color: #1BB394;
  font-weight: bold;
}

/* 日期列表 */
.dates-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.date-item {
  padding: 8rpx 16rpx;
  background: #e8f5e8;
  color: #1BB394;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 记录列表 */
.records-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.record-item {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  padding: 20rpx;
  background: #fafafa;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.record-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #666;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 无数据提示 */
.no-data {
  text-align: center;
  padding: 80rpx 0;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.no-data-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-data-text {
  font-size: 28rpx;
  color: #666;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 30rpx;
}

.action-btn {
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: #1BB394;
  color: white;
}

.action-btn.secondary {
  background: #007AFF;
  color: white;
}

.action-btn.tertiary {
  background: #8E8E93;
  color: white;
}