.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 评分卡片 */
.score-card {
  background: linear-gradient(135deg, #1BB394, #16a085);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(27, 179, 148, 0.3);
}

.score-circle {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 15rpx;
}

.score-number {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.score-total {
  font-size: 32rpx;
  opacity: 0.8;
  margin-left: 5rpx;
}

.score-text {
  font-size: 32rpx;
  margin-bottom: 15rpx;
  opacity: 0.9;
}

.bmi-info {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 离线分析标识 */
.offline-badge {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  display: inline-block;
  margin-top: 10rpx;
  font-size: 24rpx;
}

/* API来源标识 */
.api-badge {
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  display: inline-block;
  margin-top: 10rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* API统计入口 */
.api-stats-section {
  margin: 20rpx 0;
}

.api-stats-btn {
  width: 100%;
  background: linear-gradient(135deg, #8e44ad, #9b59b6);
  color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(142, 68, 173, 0.3);
}

/* 章节卡片 */
.section-card {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.section-title text {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  line-height: 1.6;
}

/* 评估文本 */
.assessment-text {
  font-size: 30rpx;
  color: #555;
  line-height: 1.8;
}

/* 舌诊分析 */
.tongue-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.tongue-label {
  font-size: 28rpx;
  color: #666;
  min-width: 80rpx;
  font-weight: 500;
}

.tongue-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

/* 风险因素 */
.risk-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #e74c3c;
}

.risk-dot {
  width: 8rpx;
  height: 8rpx;
  background: #e74c3c;
  border-radius: 50%;
  margin: 10rpx 15rpx 0 0;
  flex-shrink: 0;
}

/* 建议项目 */
.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.suggestion-number {
  background: #1BB394;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
}

/* 体质和季节建议 */
.constitution-text,
.seasonal-text {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

/* 后续建议 */
.followup-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #2980b9;
}

.followup-dot {
  width: 8rpx;
  height: 8rpx;
  background: #2980b9;
  border-radius: 50%;
  margin: 10rpx 15rpx 0 0;
  flex-shrink: 0;
}

/* 免责声明 */
.disclaimer-card {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 10rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 10rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.share-btn {
  flex: 1;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 10rpx;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-assessment-btn {
  flex: 1;
  background: #1BB394;
  color: white;
  border: none;
  border-radius: 10rpx;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn:active {
  background: #2980b9;
}

.new-assessment-btn:active {
  background: #16a085;
}

/* 截图Canvas样式 */
.screenshot-canvas {
  position: absolute;
  top: -9999rpx;
  left: -9999rpx;
  width: 750rpx;
  height: 2000rpx;
  opacity: 0;
  pointer-events: none;
}
/* 导航按钮样式 */
.navigation-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.nav-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.nav-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.nav-btn.secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.nav-btn:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}
