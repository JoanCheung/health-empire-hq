/* network-test/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.test-section {
  margin-bottom: 40rpx;
}

.test-btn {
  width: 100%;
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx;
}

.test-btn.disabled {
  background-color: #ccc;
}

.error-section {
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.error-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.error-content {
  font-size: 26rpx;
  color: #a8071a;
}

.results-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.copy-btn {
  background-color: #52c41a;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}

.summary {
  display: flex;
  justify-content: space-around;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.test-results {
  space-y: 10rpx;
}

.test-item {
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
}

.test-item.success {
  border-color: #52c41a;
  background-color: #f6ffed;
}

.test-item.failed {
  border-color: #ff4d4f;
  background-color: #fff2f0;
}

.test-item.expected_fail {
  border-color: #faad14;
  background-color: #fffbe6;
}

.test-item.info {
  border-color: #1890ff;
  background-color: #e6f7ff;
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.test-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.test-status {
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
  background-color: #f0f0f0;
  color: #333;
}

.test-details {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.test-error {
  font-size: 24rpx;
  color: #ff4d4f;
}