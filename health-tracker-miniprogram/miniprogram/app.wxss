/* =================================
   GLOBAL DESIGN SYSTEM
   Professional & Modern UI Framework
   ================================= */

/* Global Page Styles */
page {
  background: #F9FAFF;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
}

/* Global Typography System */
page, text, view {
  color: #1F2937; /* Primary text color - dark gray */
}

.text-primary {
  color: #1F2937; /* Primary text - dark gray */
}

.text-secondary {
  color: #6B7280; /* Secondary text - medium gray */
}

.text-muted {
  color: #9CA3AF; /* Muted text - light gray */
}

/* Global Card Component */
.card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8px 24px rgba(105, 93, 128, 0.08);
  margin-bottom: 24rpx;
}

/* Card Variants */
.card-compact {
  padding: 24rpx;
}

.card-spacious {
  padding: 56rpx;
}

.card-no-shadow {
  box-shadow: none;
  border: 1rpx solid #E5E7EB;
}

/* Layout Containers */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.page-container {
  padding: 32rpx 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Button Reset & Base Styles */
button {
  background: initial;
  font-family: inherit;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* Spacing Utilities */
.mb-xs { margin-bottom: 8rpx; }
.mb-sm { margin-bottom: 16rpx; }
.mb-md { margin-bottom: 24rpx; }
.mb-lg { margin-bottom: 32rpx; }
.mb-xl { margin-bottom: 48rpx; }

.mt-xs { margin-top: 8rpx; }
.mt-sm { margin-top: 16rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mt-xl { margin-top: 48rpx; }

/* Text Size Utilities */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 42rpx; }
.text-3xl { font-size: 48rpx; }

/* Font Weight Utilities */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }